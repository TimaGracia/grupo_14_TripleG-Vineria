<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head")%>

    <body>
        <%- include("./partials/header")%>
            <main>

                <% if (locals.isAdmin==true) { %>
                    <a href="/products/create" class="boton">Crear Nuevo Producto</a>
                    <a href="/products/create" class="boton1"><i class="fas fa-plus"></i></a>

                    <% } %>

                        <h1 class="titulo">Listado de Productos</h1><br><br>

                        <div class="buscador">
                            <!-- Aca poner codigo del buscador -->
                        </div>


                        <ul class="w">
                            <% productos.forEach(product=> { %>
                                <div onclick="location.href='/products/<%= product.idProduct%>';"
                                    style="cursor: pointer;">

                                    <!--<li> Categoria: <%= product.category%></li>-->
                                    <!--<li>Imagen: <%= product.image%></li>-->
                                    <li class="foto"><img src="<%=product.image %>" alt=""></li>

                                    <section id="productos">
                                        <li>
                                            <%= product.name%>
                                        </li>
                                        <li class="des">Descripcion: <%= product.description%>
                                        </li>
                                        <li class="bod"> Bodega: <%= product.business.name%>
                                        </li>
                                        <li class="bod"> Tipo: <%= product.categories.type%>
                                        </li>
                                        <li class="pre"> Precio: $<%= product.price%>
                                        </li>

                                        <form action="/addToCart" method="POST">
                                            <br>

                                            <% if (locals.isLogged==true) {%>

                                                <input type="hidden" name="user"
                                                    value="<%= locals.userLogged.idUser %>">
                                                <% } else {%>
                                                    <input type="hidden" name="user" value="1">
                                                    <% }%>



                                                        <input type="hidden" name="product"
                                                            value="<%= product.idProduct%>">
                                                            <div id="addToCart">
                                                            <i class="far fa-plus-square"></i>    
                                                        <button type="submit">AÃ±adir al carrito</button></div>

                                        </form>
                                    </section>

                                </div>
                                <br>
                                <% }) %>
                        </ul>


            </main>
            <%- include("./partials/footer")%>

    </body>

</html>